<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cookbook.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @cookbook.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @cookbook.user_id %>
</p>

<p>
  <strong>Recipes:</strong><br>
  <% @cookbook.recipes.each do |recipe| %>
  <%= image_tag(recipe.display_url, :width => 150) if recipe.display.present? %><br>
  <%= link_to recipe.name, recipe_path(recipe.id) %><br>
  <% end %>
</p>

<%= link_to 'Edit', edit_cookbook_path(@cookbook) %> |
<%= link_to "Back to all cookbooks", cookbooks_path %>